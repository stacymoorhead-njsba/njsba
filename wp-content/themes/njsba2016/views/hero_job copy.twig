{% spaceless %}
<main id="site-main">
<header class="page-header{% if thumbnail %} page-header--has-image{% endif %}">

    {% if breadcrumbs %}
      
      {{breadcrumbs}}

    {% endif %}
    
    <div class="page-header__primary">

      <h1 class="title">
        {{title}}
      </h1>

      {% if byline %}
        <p class="byline">{{byline}}</p>
      {% endif %}

      {% if deck %}

        <p class="subhead">
          {{deck}}
        </p>

      {% endif %}
    </div>
    

    <aside class="page-header__secondary">
	{# FEATURED IMAGE #}
		 {% if thumbnail %}
          <img class="article__post-image" src="{{thumbnail}}" alt="">
        {% endif %}


    </aside>

</header>


{% endspaceless %}