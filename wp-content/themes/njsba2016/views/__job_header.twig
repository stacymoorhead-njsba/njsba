{% spaceless %}
<main id="site-main">
<header class="page-header{% if job_image %} page-header--has-image{% endif %}">

    {% if breadcrumbs %}
      
      {{breadcrumbs}}

    {% endif %}
    
    <div class="page-header__primary">

      <h1 class="title">
        {{title}}
      </h1>

      {% if byline %}
        <p class="byline">{{byline}}</p>
      {% endif %}

      {% if deck %}

        <p class="subhead">
          {{deck}}
        </p>

      {% endif %}
    </div>
    

    <aside class="page-header__secondary">
      {# JOB IMAGE #}
      
        {% if job_image %}
			<img class="article__post-image" src="{{job_image}}" alt="Job logo">
		{% endif %}
		

    </aside>

</header>

{% endspaceless %}