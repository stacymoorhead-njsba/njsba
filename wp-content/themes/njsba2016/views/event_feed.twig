

  {% if heading %}
    <h2>{{heading}}</h2>
  {% endif %}
  
{% for post in posts %}



  <article class="card card--neutral card--event">

    <div class="card__body">
      <div class="card__figure">
        <p class="calendar-date">
          <span class="calendar-date__month">{{post.startDate|date("M")}}</span>
          <span class="calendar-date__date">
            {{post.startDate|date("j")}}

            {% if ( post.endDate ) and ( post.endDate|date("j") != post.startDate|date("j") ) %}&ndash;{{post.endDate|date("j")}}
            {% endif %}

          </span>
        </p>
      </div>
      <div class="card__text">
          <h3 class="card__title"><a href="https://www.njsba.org/meeting-details/?ProductId={{post.meeting_id}}">{{post.post_title}}</a></h3>
       <!-- <h3 class="card__title"><a href="{{post.url}}">{{post.post_title}}</a></h3>-->
        <p><strong>When: </strong>         
            {% if ( post.endDate ) and ( post.endDate != post.startDate ) %}
             {{post.startDateNoYear}} &ndash; {{post.endDate}}

            {% else %}
            
            {{post.startDate}}

            {% endif %}


        </p>
        <p><strong>Where:</strong><!-- Princeton Marriott Hotel and Conference Center --><br>
          {{post.meeting_add_1}},</br>
          {{post.meeting_city}},
          {{post.meeting_state}},
          {{post.meeting_postal}}
        </p>

        <ul class="card__actions">
          {% if post.meeting_loc_link %}
            <li><a href="{{post.meeting_loc_link}}" target="_blank">Directions</a></li>
          {% endif %}
         <span> </span><li><a href="https://www.njsba.org/meeting-details/?ProductId={{post.meetingid}}">Register</a></li>
          <!--<li><a href="{{post.personify_url}}"> Register</a></li>-->
        </ul>
      </div>
    </div>

  </article>

{% endfor %}