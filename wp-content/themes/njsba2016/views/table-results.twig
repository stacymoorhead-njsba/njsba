{% spaceless %}
  
{% if heading %}
<h2>{{heading}}</h2>
{% endif %}
<table class="search-results">
    <thead>
      <tr>
        <th class="results__title">Title</th>
        <th>Excerpt</th>
      </tr>
    </thead>
    <tbody>
      
      {% for post in posts %}

      <tr>
        <td class="results__title">
          <a href="{{post.url}}">{{post.post_title}}</a>
        </td>
        <td>
         {{post.post_excerpt}}
        </td>
      </tr>

      {% endfor %}


     
    </tbody>
  </table>


  {% if pagenation %}

    {% include 'pagenation.twig' %}

  {% endif %}

  {% endspaceless %}